{
  "name": "pasteid-server",
  "version": "1.0.0",
  "description": "Encrypted pasting service built with JS",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "docs": "esdoc",
    "prestart": "npm run -s build",
    "start": "node dist/main.js",
    "dev": "nodemon src/main.js --exec \"node -r dotenv/config -r babel-register\"",
    "maindev": "node src/main.js",
    "clean": "rimraf dist",
    "build": "yarn run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "esw -w src test",
    "production": "forever dist/main.js"
  },
  "keywords": [
    "babel",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest",
    "eslint"
  ],
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "chokidar": "^2.0.2",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "esdoc-standard-plugin": "^1.0.0",
    "express": "^4.16.2",
    "glob": "^7.1.2",
    "js-yaml": "^3.11.0",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "morgan": "^1.9.0",
    "mysql": "^2.15.0",
    "pg": "^7.4.1",
    "rimraf": "^2.6.2",
    "socket.io": "^2.0.4",
    "twitter": "^1.7.1",
    "winston": "^3.0.0-rc3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-register": "^6.26.0",
    "esdoc": "^1.0.4",
    "esdoc-node-plugin": "^0.2.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-watch": "^3.1.3",
    "expect": "^22.4.3",
    "jest": "^21.2.1",
    "jest-cli": "^22.4.3",
    "mocha": "^5.0.5",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "html",
      "lcov"
    ]
  }
}
